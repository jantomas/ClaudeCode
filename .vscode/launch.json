    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build MaestroServoTester",
            "program": "${workspaceFolder}/MaestroServoTester/bin/Debug/net9.0/MaestroServoTester.exe",
            "args": ["--config", "${workspaceFolder}/hexapod_control/config/hardware.yaml", "--channel", "0"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        }

    ]
}